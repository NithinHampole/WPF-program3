<Window x:Class="WpfPgm3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dynamic UI" Height="900" Width="600">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel x:Name="MainPanel" Margin="10" Background="Honeydew">
            <Label  FontSize="15" Margin="0,0,0,0" HorizontalAlignment="Center">Add Student </Label>
            <Label>Enter Student ID</Label>
            <TextBox Name="inputId1"></TextBox>
            <Label>Enter Student Name</Label>
            <TextBox Name="inputName"></TextBox>
            <Button Background="LightCoral" Click="AddButton_Click" Width="100" Margin="0,8,0,0">Add</Button>
            <Label FontSize="15" HorizontalAlignment="Center" Margin="0,15,0,0">Delete Student</Label>
            <Label>Enter Student ID</Label>
            <TextBox x:Name="inputId2"></TextBox>
            <Button  Background="LightCoral" Click="DeleteButton_Click" Width="100" Margin="0,8,0,0">Delete</Button>
            <Label FontSize="15" HorizontalAlignment="Center" Margin="0,15,0,0">Display</Label>
            <TextBox Foreground="LightCoral" Height="200" x:Name="output"></TextBox>
            
        </StackPanel>
    </ScrollViewer>
</Window>
